{{!-- for datepicker --}}
<script type="text/javascript">
  $(function () {
    $('#datetimepicker1').datetimepicker();
  });
</script>

<div class="container form-group mt-5">
  {{> messages}}
  <form action="/record/{{{record._id}}}?_method=PUT" method="POST">
    {{!-- title --}}
    <div class="row mb-5">
      <div class="col-2">
        <p>*為必填欄位</p>
      </div>
      <div class="col-6">
        <h3>請修改支出項目</h3>
      </div>
    </div>
    {{!-- name --}}
    <div class="row mb-5">
      <div class="col-2">
        <label class="col-form-label col-form-label-lg" for="name">名稱*:
        </label>
      </div>
      <div class="col-6">
        <input class="form-control form-control-lg" type="text" placeholder="name" name="name"
          value="{{{record.name}}}">
      </div>
    </div>
    {{!-- shop --}}
    <div class="row mb-5">
      <div class="col-2">
        <label class="col-form-label col-form-label-lg" for="shop">商家*:
        </label>
      </div>
      <div class="col-6">
        <input class="form-control form-control-lg" type="text" placeholder="shop" name="shop"
          value="{{{record.shop}}}">
      </div>
    </div>
    {{!-- date --}}
    <div class="row mb-5">
      <div class="col-2">
        <label class="col-form-label col-form-label-lg" for="date">日期*:</label>
      </div>
      <div class="input-group date col-6" id="datetimepicker1">
        <input class="form-control form-control-lg" type="date" placeholder="date" name="date"
          value="{{{record.date}}}">
        <span class="input-group-addon">
          <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>

    </div>
    {{!-- category --}}
    <div class="row form-group mb-5">
      <div class="col-2"><label class="col-form-label col-form-label-lg" for="category">類別*:</label></div>
      <div class="col-6">
        <select class="form-control form-control-lg" id="category" name="category">
          <option value="" disabled selected>請選擇類別</option>
          <option value="家居物業">家居物業</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="運輸交通">運輸交通</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="其他">其他</option>
        </select>
      </div>
    </div>
    {{!-- amount --}}
    <div class="row mb-5">
      <div class="col-2"><label class="col-form-label col-form-label-lg" for="amount">金額*:</label></div>
      <div class="col-6">
        <input class="form-control form-control-lg" type="text" placeholder="amount" name="amount"
          value="{{{record.amount}}}">
      </div>
    </div>
    {{!-- edit btn --}}
    <div class="row form-group">
      <button class="btn btn-secondary btn-lg" type="submit">編輯</button>
    </div>
  </form>
</div>